        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="pro.network.freshcatch.SplashActivity"
            android:theme="@style/AppThemeNowhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pro.network.freshcatch.HomeActivity"
            android:theme="@style/AppTheme" />


        <activity
            android:name="pro.network.freshcatch.ChangePassword"
            android:theme="@style/AppTheme" />

        <activity
            android:name="pro.network.freshcatch.cart.CartActivity"
            android:label="Cart"
