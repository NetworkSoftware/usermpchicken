        <activity
            android:name="pro.network.freshcatch.AllProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.freshcatch.orders.MyOrderPage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="pro.network.freshcatch.product.ProductActivity"
            android:theme="@style/AppTheme" />
        <activity
